<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false">
	<testsuites>
		<testsuite name="Application">
			<directory>tests</directory>
		</testsuite>
    </testsuites>

	<filter>
		<whitelist>
			<directory suffix=".php">./src</directory>
		</whitelist>
	</filter>

    <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
</phpunit>
